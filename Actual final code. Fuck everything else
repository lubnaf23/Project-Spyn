brick.SetColorMode(1,2);
global key;

%initialize 2 separate counters
number1 = 0;

while 1
    %brick.SetColorMode(3,2);
    dist = brick.UltrasonicDist(4); % change according to ports
    color = brick.ColorCode(1);
    brick.StopMotor('A', 'Brake');
    disp(dist);

    % Keep moving forward by default
    brick.MoveMotor('B', 30);
    brick.MoveMotor('C', 30);
    brick.StopMotor('A', 'Brake')
    disp("moving motor first");

    % defining distance
    noWallDist = 21; % Adjust
    tooCloseDist = 20; % Adjust

    % check for no wall on left
    if ((dist > noWallDist) && (dist < 40))
        disp("turn into wall");
        % reducing left motor speed
        brick.MoveMotor('B', 20);
        brick.MoveMotor('C', 30);
        pause(0.2); % Adjust pause
    end
   if (dist > 40)
      pause(0.7)
      brick.MoveMotor('C', 40)
      brick.MoveMotor('B', -10)
      pause(2.28)
      brick.MoveMotor('C',30);
      brick.MoveMotor('B',30);
      pause(2.8)
      disp("dist is greater than 30");
   end

    % Check if too close to a wall
    if (dist < tooCloseDist)
        disp("turn away from wall");
        % Reducing right motor speed
        brick.MoveMotor('B', 30);
        brick.MoveMotor('C', 20);
        pause(0.2); % Adjust
    end

   if brick.TouchPressed(2)
      brick.MoveMotor('B', -30)
      brick.MoveMotor('C', -30)
      pause(2.09)
      brick.MoveMotor('B', 40)
      brick.MoveMotor('C', -10)
      pause(1.95)
  end
  if (color == 5) 
    pause(0.3)
    disp("red");
    brick.StopMotor('B');
    brick.StopMotor('C');
    pause(1.0);
    
  end

  if ((color == 2) && (number1 ==0))
        number1 = 1;
        brick.StopMotor('B');
        brick.StopMotor('C');
    
        InitKeyboard();

        while 1
            pause(0.1);
            brick.StopMotor('A', 'Brake')
            brick.StopMotor('B')
            brick.StopMotor('C')
            switch key
                case 'uparrow'
                    brick.MoveMotor('B',30)
                    brick.MoveMotor('C',30);


                case 'downarrow'
                    brick.MoveMotor('B',-30)
                    brick.MoveMotor('C', -30);

                case 'leftarrow'
                    brick.MoveMotor('B',30)
                    brick.MoveMotor('C', -10);

                case 'rightarrow'
                    brick.MoveMotor('C',30)
                    brick.MoveMotor('B', -10);

                 case 'd'
                    brick.MoveMotor('A',13)
                    pause(2)

                case 'u'
                    brick.MoveMotor('A',-17)
                    pause(2)
                    brick.StopMotor('A', 'Brake')

                case 0
                    brick.StopMotor('A')
                    brick.StopMotor('B')
                    brick.StopMotor('C')

                case 'q'
                    brick.StopMotor('A');
                    brick.StopMotor('B');
                    brick.StopMotor('C');
                    break;

            end
        end
        CloseKeyboard();
    end
    if ((color == 3) && (number1 ==1))
        number1 = 2;
        brick.StopMotor('B');
        brick.StopMotor('C');
        brick.StopMotor('A', 'Brake');
    
        InitKeyboard();

        while 1
            pause(0.1);
            brick.StopMotor('A', 'Break')
            brick.StopMotor('B')
            brick.StopMotor('C')
            switch key
                case 'uparrow'
                    brick.MoveMotor('B',30)
                    brick.MoveMotor('C',30);


                case 'downarrow'
                    brick.MoveMotor('B',-30)
                    brick.MoveMotor('C', -30);

                case 'leftarrow'
                    brick.MoveMotor('B',30)
                    brick.MoveMotor('C', -10);

                case 'rightarrow'
                    brick.MoveMotor('C',30)
                    brick.MoveMotor('B', -10);

                 case 'd'
                    brick.MoveMotor('A',13)
                    pause(2)

                case 'u'
                    brick.MoveMotor('A',-17)
                    pause(2)

                case 0
                    brick.StopMotor('A')
                    brick.StopMotor('B')
                    brick.StopMotor('C')

                case 'q'
                    brick.StopMotor('A');
                    brick.StopMotor('B');
                    brick.StopMotor('C');
                    break;

            end
        end
        CloseKeyboard();
    end
    if ((color == 4) && (number1 ==2))
        
        brick.StopMotor('B');
        brick.StopMotor('C');
        pause(100);
    end
end
