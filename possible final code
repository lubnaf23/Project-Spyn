brick.SetColorMode(X,2);

while 1
    dist = brick.UltrasonicDist(X);
    color = brick.ColorCode(X);
    press = brick.TouchPressed(X);
    brick.MoveMotor('X',40);

    if (dist > 20)
        pause(1.5);
        brick.StopMotor('X', 'Coast');
        brick.MoveMotor('Y',30);
        brick.MoveMotor('X',40, 90,'Coast');
        brick.MoveMotor('Y', -10);
        pause(1);
        brick.StopMotor('Y','Coast');
    end

