global keyboard
init keyboard();

while 1
    pause(0.1);

    switch keyboard
        case 'uparrow'
            brick.MoveMotor('A',-40);
            
        case 'downarrow'
            brick.MoveMotor('A',40);

        case 'leftarrow'
            brick.MoveMotor('B',40);
            
        case 'rightarrow'
            brick.MoveMotor('A',-40);

        case 0
            disp('No key pressed');

        case 'q'
            break;

    end
end
CloseKeyboard();
